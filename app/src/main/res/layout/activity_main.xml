<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/MainActivity_Background_LinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:background="@color/light_sage">


    <ImageView
        android:id="@+id/MainActivity_NewComment_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:layout_margin="20dp"
        android:src="@drawable/ic_note_add_black"
        android:contentDescription="@string/newComment_image_description" />

    <ImageView
        android:id="@+id/MainActivity_Smiley_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/smiley_happy"
        android:contentDescription="@string/smiley_image_description" />

    <ImageView
        android:id="@+id/MainActivity_Historic_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:src="@drawable/ic_history_black"
        android:contentDescription="@string/historic_image_description" />

</LinearLayout>