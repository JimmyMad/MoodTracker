<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainActivity_Background_LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_sage"
    android:gravity="center"
    android:layout_weight="1"
    tools:context=".controller.MainActivity">


    <ImageView
        android:id="@+id/MainActivity_NewComment_ImageView"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:layout_margin="20dp"
        android:contentDescription="@string/newComment_image_description"
        android:src="@drawable/ic_note_add_black" />

    <ImageView
        android:id="@+id/MainActivity_Smiley_ImageView"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/smiley_image_description"
        android:src="@drawable/smiley_happy" />

    <ImageView
        android:id="@+id/MainActivity_History_ImageView"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:contentDescription="@string/historic_image_description"
        android:src="@drawable/ic_history_black" />

</LinearLayout>